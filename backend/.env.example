# ============================================
# Smart Forecast - Backend Environment
# NestJS application configuration
# ============================================

# ====== Application ======
NODE_ENV=development
PORT=8000
API_PREFIX=api/v1

# ====== PostgreSQL Database Connection ======
DATABASE_URL=postgresql://admin:changeme_in_production@localhost:5432/smart_forecast_db

# ====== MongoDB Connection ======
# Connection string for Orion-LD data (if needed)
MONGO_URL=mongodb://admin:changeme_in_production@localhost:27017/orion?authSource=admin

# ====== Orion-LD Context Broker ======
ORION_LD_URL=http://localhost:1026
ORION_LD_API_VERSION=ngsi-ld/v1
ORION_LD_TENANT=

# ====== OpenWeatherMap API ======
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# ====== JWT Authentication ======
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=7d

# ====== MinIO Object Storage ======
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=incidents

# ====== Firebase Cloud Messaging ======
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ====== Google OAuth 2.0 (for Mobile) ======
# Create OAuth 2.0 Client ID with type: Android/iOS in Google Cloud Console
# Android/iOS clients only have client_id (no client_secret - public clients)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
