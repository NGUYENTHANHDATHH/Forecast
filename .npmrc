# ============================================
# PNPM Configuration for Smart Forecast
# ============================================

# Save exact versions in package.json (no ^ or ~)
save-exact = true

# Strict peer dependencies
strict-peer-dependencies = false

# Auto install peers
auto-install-peers = true

# Engine strict - enforce Node version
engine-strict = true

# Hoist all dependencies to root node_modules
shamefully-hoist = false

# Public hoist pattern - hoist some packages for compatibility
public-hoist-pattern[] = "*eslint*"
public-hoist-pattern[] = "*prettier*"

# Fund messages
fund = false

# Update notifier
update-notifier = false

# Prefer offline
prefer-offline = false

# Loglevel
loglevel = warn

# Dedupe direct dependencies
dedupe-direct-deps = true
