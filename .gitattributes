# ============================================
# Git Attributes for Smart Forecast
# ============================================
# This ensures consistent line endings across different operating systems

# Auto detect text files and normalize line endings to LF
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.config text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf
docker-compose*.yml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README* text eol=lf

# Templates
*.ejs text eol=lf
*.hbs text eol=lf

# Styles
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary
*.avif binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Certificates & Keys
*.pem binary
*.key binary
*.p12 binary
*.p8 binary
*.jks binary
*.mobileprovision binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary

# Video
*.mp4 binary
*.mov binary
*.avi binary
*.webm binary

# Audio
*.mp3 binary
*.wav binary
*.ogg binary

# Native builds
*.apk binary
*.ipa binary
*.aab binary

# Other
*.sqlite binary
*.db binary
